{
  "compilerOptions": {
    "module": "commonjs",
    "lib": [
      "es6"
    ],
    "outDir": "dist",
    "strict": true,
    "declaration": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "esModuleInterop": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}